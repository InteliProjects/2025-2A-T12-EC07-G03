# Server
PORT=4000
NODE_ENV=development

# Frontend CORS (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# JWT
JWT_SECRET=replace_me_with_a_long_random_secret
JWT_EXPIRES_IN=7d

# PostgreSQL (mesmas configurações da API Bento)
PGHOST=localhost
PGPORT=5432
PGDATABASE=SyncTelemetry
PGUSER=admin
PGPASSWORD=admin123
# Enable SSL for cloud providers (true/false)
PGSSL=false
# If your provider uses self-signed certs, set to false
PGSSL_REJECT_UNAUTHORIZED=false

# DATABASE_URL=postgresql://admin:admin123@localhost:5432/SyncTelemetry

# Optional: users table name for auth
USERS_TABLE=users

# Optional admin seed
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=change_me
ADMIN_NAME=Admin
ADMIN_OVERWRITE_PASSWORD=false

